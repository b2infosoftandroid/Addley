<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.b2infosoft.addley.SplashDemo">
    <android.support.v4.view.ViewPager
        android:id="@+id/splash_demo_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp">
        <ImageView
            android:id="@+id/splash_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_lens_black_18dp"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/splash_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_panorama_fish_eye_black_18dp"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/splash_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_panorama_fish_eye_black_18dp"
            android:padding="5dp"
            />
    </LinearLayout>
</FrameLayout>

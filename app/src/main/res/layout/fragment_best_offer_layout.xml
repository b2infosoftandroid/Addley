<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/best_offer_company_logo"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:maxWidth="100dp"
                android:minWidth="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_not_found" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/best_offer_company_logo"
                android:orientation="vertical"
                android:paddingLeft="25dp">
                <TextView
                    android:id="@+id/best_offer_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Dekho"
                    android:textAllCaps="true"
                    android:textColor="@color/button_2_stroke"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/best_offer_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Large Text"
                    android:textAllCaps="true"
                    android:textColor="@color/discount"
                    android:textSize="12dp" />
                <Button
                    android:id="@+id/best_offer_action_get_offer_button"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_background"
                    android:text="Get Offer"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
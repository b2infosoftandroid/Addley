<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ThemeColor"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/best_offer_company_logo"
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:scaleType="fitStart"
                android:src="@drawable/image_not_found" />
            <TextView
                android:id="@+id/best_offer_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="Get Rs. 100 Cashback on Electricity bill of Rs. 10..."
                android:textAllCaps="true"
                android:textColor="@color/button_2_stroke"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/best_offer_action_get_offer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:text="Get Code"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/categories_image_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:id="@+id/categories_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_terrain_black_24dp"
            android:scaleType="fitStart"
            android:alpha="0.4"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/categories_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:padding="5dp"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/categories_image_layout"
        android:layout_toLeftOf="@+id/categories"
        android:text="Online Shopping"
        />
    <LinearLayout
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/categories_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="15dp"
        android:text="20"
        android:padding="5dp"
        android:allowUndo="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers"
            />
    </LinearLayout>
</RelativeLayout>